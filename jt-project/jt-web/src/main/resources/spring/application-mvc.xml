<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<!-- 1.在web.xml 中配置前端控制器 -->
	
	<!-- 开启 MVC 注解（@RequestMapping） -->
	<mvc:annotation-driven/>
	
	<!-- 2.配置放行静态资源 -->
	<mvc:default-servlet-handler/>
	
	<!-- 3.配置视图解析器(内部资源视图解析器) id是给自己调用的，没地方调用则不用id -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="Prefix" value="/WEB-INF/views/"/>
		<property name="Suffix" value=".jsp"/>
	</bean>

	<!--3.配置文件上传视图解析器
		1.id必须固定:multipartResolver.
		2.设定文件长传的参数
			2.1设定文件上传的最大值  10M(必须是值,不能是算术式)
			2.2设定字符集编码 -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="MaxUploadSize" value="5242880"/> <!-- 5 *1048576 -->
		<property name="DefaultEncoding" value="utf-8"/>
	</bean>

	<!--配置拦截器-->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/cart/**"/>
			<mvc:mapping path="/order/**"/>
			<bean class="com.jt.web.interceptor.UserInterceptor"/>
		</mvc:interceptor>
	</mvc:interceptors>

</beans>